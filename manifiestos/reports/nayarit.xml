<?xml version="1.0" encoding="utf-8" ?>
<odoo>
 <report id="manifiestos_manifiesto_n_report" model="manifiestos.manifiesto" string="Nayarit" 
  name="manifiestos.report_manifiesto_n" file="manifiestos.report_manifiesto_n" report_type="qweb-pdf" />

  <template id="report_manifiesto_n">
    <t t-call="web.html_container">
        <t t-set="data_report_margin_top" t-value="12"/>
        <t t-set="data_report_header_spacing" t-value="0"/>
        <t t-foreach="docs" t-as="o">
            <!--<t t-call="web.external_layout">-->
            <t t-call="web.basic_layout">
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-right p-8" style="font-size: 10px; color: BLACK;">
                      <strong>2.- No. DE MANIFIESTO: </strong> <!--<span t-field="o.id"/>--><span t-field="o.consecutivo"/><br/>
                      <th><strong>3.- PAGINA</strong> 1</th>
                    </div>
                  </div>
                </div>
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-2 text-center p-2">
                      <img t-att-src="'/manifiestos/static/img/nayarit.png'" width="152px" height="60px"/>
                    </div>
                    <div class="col-8 text-center p-8">
                      <h6>MANIFIESTO DE ENTREGA, TRANSPORTE Y RECEPCION DE RESIDUOS DE MANEJO ESPECIAL NO PELIGROSOS.
                      </h6>
                    </div>
                    <div class="col-2 text-center p-2">
                      <img t-att-src="'/manifiestos/static/img/logo_tra.png'" width="118px" height="43px"/>
                    </div>
                  </div>
                </div>

                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-center" style="background-color: #486f9e;  font-size: 8px; color: white; border-radius:10px;">
                      <h6>GENERADOR</h6>  
                    </div>
                  </div>
                  <table class="table" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <th><strong>1.-NÚM. DE REGISTRO O LAU-JAL COMO EMPRESA GENERADORA DE RESIDUOS DE MANEJO ESPECIAL NO PELIGROSOS: </strong> <span t-field="o.num_mani"/> </th>
                        <th><strong>4.- RAZON SOCIAL DE LA EMPRESA GENERADORA:</strong> <span t-field="o.partner_id.parent_id"/> - <span t-field="o.partner_id.name"/></th>
                        <th>DOMICILIO: <span t-field="o.partner_id.street_name"/> - <span t-field="o.partner_id.street_number"/> </th>
                        <td>C.P.: <span t-field="o.partner_id.zip"/></td>
                      </tr>
                      <tr>
                        <td>COLONIA: <span t-field="o.partner_id.l10n_mx_edi_colony"/></td>
                        <td>MUNICIPIO - DELEGACION: <span t-field="o.partner_id.city"/></td>
                        <td>ESTADO: <span t-field="o.partner_id.state_id"/></td>
                        <td colspan="2">TELEFONO: <span t-field="o.partner_id.phone"/></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                
                <!--<div class="col-12 text-center font-weight-bold" style="height: 1px; background-color: #000; margin-top: 10px; margin-bottom: 10px;"></div>-->
                  <div class="row">
                    <div class="col-12 text-center" style="background-color: #486f9e;  font-size: 8px; color: white; border-radius:10px;">
                      <h6>RESIDUO</h6>  
                    </div>
                  </div>
                <table class="table text-center" style="font-size: 8px; color: BLACK;">
                  <thead>
                    <tr>
                      <th rowspan="2"><strong>5.- DESCRIPCION (Nombre del residuo y características CRETIB)</strong></th>
                      <th colspan="2">CONTENEDOR</th>
                      <th rowspan="2">CANTIDAD TOTAL DE RESIDUO</th>
                      <th rowspan="2">UNIDAD VOLUMEN/PESO KG. </th>
                    </tr>
                    <tr>
                      <th>TIPO</th>
                      <th>CAPACIDAD</th>
                    </tr>
                  </thead>
                  <t t-foreach="o.lines" t-as="productos" >   
                    <tbody class="invoice_tbody">
                      <td class="text-left"><span t-esc="productos.product_id.name"/></td>
                      <td class="text-left"><span t-field="productos.tipo"/></td>
                      <td class="text-left"><span t-field="productos.capacidad"/></td>
                      <td class="text-left"><span t-field="productos.cantidad"/></td>
                      <td class="text-left"><span t-field="productos.unidad"/></td>
                    </tbody>
                  </t>
                </table>

                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-left p-8" style="font-size: 8px; color: BLACK;">
                      <!--<div class="col-12 text-center font-weight-bold" style="height: 1px; background-color: #000; margin-top: 10px; margin-bottom: 10px;"></div>-->
                      <strong>6.- INSTRUCCIONES ESPECIALES E INFORMACION ADICIONAL PARA EL MANEJO SEGURO:</strong> 
                        <span t-field="o.instrucciones"/> 
                      <!--<div class="col-12 text-center font-weight-bold" style="height: 1px; background-color: #000; margin-top: 10px; margin-bottom: 10px;"></div>-->
                    </div>
                  </div>
                </div>

                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-left p-8" style="font-size: 8px; color: BLACK;">
                     <strong>7.- CERTIFICACION DEL GENERADOR:</strong> 
                     DECLARO QUE EL CONTENIDO DE ESTE LOTE ESTA TOTAL Y CORRECTAMENTE DESCRITO MEDIANTE EL NOMBRE DEL RESIDUO, BIEN EMPACADO, Y QUE SE HAN PREVISTO LAS CONDICIONES DE SEGURIDAD PARA SU TRANSPORTE POR VIA TERRESTRE DE ACUERDO A LA LEGISLACION NACIONAL VIGENTE.
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-4 text-left p-8" style="font-size: 8px; color: BLACK;">
                      NOMBRE Y FIRMA DEL RESPONSABLE: <br/>
                    </div>
                    <div class="col-8 text-left p-8" style="font-size: 8px; color: BLACK;">
                      <span t-field="o.nombre_7"/>    ___________________________________________ <br/>
                    </div>
                  </div>
                </div>

 
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-center" style="background-color: #486f9e; color: white; border-radius:10px;">
                      <h6>TRANSPORTE</h6>  
                    </div>
                  </div>
                  <table class="table" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <td colspan="2"><strong>8.- NOMBRE DE LA EMPRESA TRANSPORTISTA: </strong> <span t-field="o.emp_tralisol"/></td>
                        <td>DOMICILIO:<span t-field="o.emp_domicilio"/> </td>
                      </tr>
                      <tr>
                        <td>TELEFONO: <span t-field="o.emp_telefono"/></td>
                        <td>REGISTRO SSMAA: <span t-field="o.emp_permiso"/></td>
                      </tr>
                      <tr>
                      </tr>
                    </tbody>
                  </table>

                  <table class="table text-left" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <td colspan="2"><strong>9.- RECIBI LOS RESIDUOS DESCRITOS EN EL MANIFIESTO PARA SU TRANSPORTE.</strong></td>
                        <td colspan="2"><strong>10.- FECHA DE EMBARQUE:</strong><span t-field="o.fecha_1"/></td>
                      </tr>
                      <tr>
                        <td>NOMBRE:<span t-field="o.vehicle_id.conductor"/></td>
                        <td>FIRMA:  _____________________________</td>
                        <!--<td><strong>11.- NÚMERO DE LICENCIA DE CONDUCIR:</strong><span t-field="o.conductor.identification_id"/></td>-->
                        <td><strong>CARGO: </strong><span t-field="o.vehicle_id.conductor.job_title"/></td>
                        <!--<td>TIPO:<span t-field="o.conductor.identification_id"/></td>-->
                      </tr>

                      <tr>
                        <td colspan="2"><strong>10.- RUTA DE LA EMPRESA GENERADORA HASTA SU ENTREGA: </strong><span t-field="o.ruta"/></td>
                      </tr>

                      <tr>
                        <td colspan="4"><div class="col-12 text-center font-weight-bold" style="height: 1px; background-color: #000; margin-top: 10px; margin-bottom: 10px;"></div></td>
                      </tr>

                      <tr>
                        <td colspan="2"><strong>11.- TIPO DE VEHICULO:</strong><span t-field="o.vehicle_id.tipo_vehiculo"/></td>
                        <td colspan="2">No. DE PLACA: <span t-field="o.vehicle_id.license_plate"/></td>
                      </tr>
                    </tbody>
                  </table>

                </div>


                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 text-center" style="background-color: #486f9e; color: white; border-radius:10px;">
                      <h6>DESTINATARIO</h6>  
                    </div>
                  </div>
                  <table class="table" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <td><strong>12.- NOMBRE DE LA EMPRESA DESTINATARIA:  </strong> <span t-field="o.contact_id"/> </td>
                        <td>NÚMERO DE AUTORIZACIÓN: <span t-field="o.num_autorizacion"/></td>
                        <td>DOMICILIO:<span t-field="o.contact_id.street_name"/></td>
                      </tr>
                    </tbody>
                  </table>

                  <table class="table" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <td>13.- RECIBI LOS RESIDUOS DESCRITOS EN EL MANIFIESTO.</td>
                      </tr>
                      <tr>
                        <td>OBSERVACIONES: _____________________________________________________________________________________</td>
                      </tr>
                    </tbody>
                  </table>

                  <table class="table" style="font-size: 8px; color: BLACK;">
                    <tbody>
                      <tr>
                        <td>NOMBRE:  <span t-field="o.des_nombre"/></td>
                        <td>CARGO:   <span t-field="o.cargo"/></td>
                        <td>FIRMA:  _____________________________ </td>
                        <td><strong>FECHA: DE RECEPCIÓN:</strong><span t-field="o.fecha_2"/></td>
                      </tr>
                    </tbody>
                  </table>
                </div>  
                <div class="container-fluid" style="page-break-inside: avoid;">
                  <div class="row" style="page-break-inside: avoid;">
                    <div class="col-2 text-left" style="page-break-inside: avoid;">
                      <img t-att-src="'/report/barcode/QR/' + str(o.generate_qr_code_text())" style="width:100px;height:100px" alt="Barcode"/>
                    </div>
                    <div class="col-10 text-left" style="font-size: 8px; color: BLACK;">
                      <br/><br/><br/><br/><br/><span t-esc="o.generate_qr_code_text()"/>
                    </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>


