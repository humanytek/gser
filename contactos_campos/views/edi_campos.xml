<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">res.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_mx_edi.mx_partner_address_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_mx_edi_colony']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='l10n_mx_edi_locality_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form_inherited_licence" model="ir.ui.view">
            <field name="name">res.partner.form.inherited.licence</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!--<xpath expr="//field[@name='l10n_mx_edi_operator_licence']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>-->

                <field name="l10n_mx_edi_operator_licence" position="replace">
                    <field name="l10n_mx_edi_operator_licence" attrs="{'invisible': [('company_id', '=', 1)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
