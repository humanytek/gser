<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Heredar vista de formulario de res.partner -->
        <record id="view_res_partner_form_inherited" model="ir.ui.view">
            <field name="name">res.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='street_name']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street_number']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street_number2']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='ine_representante']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <!--<field name="l10n_mx_edi_curp" position="replace">
                    <field name="l10n_mx_edi_curp" attrs="{'invisible': [('company_id', '=', 1)]}"/>
                </field>-->
                <field name="doc_f_licencia" position="replace">
                    <field name="doc_f_licencia" attrs="{'invisible': [('company_id', '=', 1)]}"/>
                </field>
                <field name="f_licencia" position="replace">
                    <field name="f_licencia" attrs="{'invisible': [('company_id', '=', 1)]}"/>
                </field>   
                <!--<field name="l10n_mx_edi_operator_licence" position="replace">
                    <field name="l10n_mx_edi_operator_licence" attrs="{'invisible': [('company_id', '=', 1)]}"/>
                </field>--> 
            </field>
        </record>
    </data>
</odoo>

