<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="serviciogser_view_form" model="ir.ui.view">
        <field name="name">serviciogser.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"></field>
        <field name="arch" type="xml">
        <field name="partner_id" position="after">
          <field name="contacto_facturacion" domain="[('parent_id', '=', partner_id)]"/>
          <field name="email_facturacion"/> 
          <!--field name="orden_venta" domain="[('state', '=', 'sale')]"/--> 
          <field name="orden_venta" domain="['|', ('partner_id', '=', partner_id), ('state', '=', 'sale')]"/>
        </field>
         <page name="description" position="after">
            <group string="Ruta">
              <group>
                <group string="Ruta">
                  <field name="estatus_ruta"/>           
                  <field name="km_ruta"/>
                  <field name="carga_ruta"/>
                  <field name="capacidad_ruta"/>
                  <field name="ejes_ruta"/>
                  <field name="producto_ruta"/>
                </group>
                <group string="Costos">
                  <field name="tipo_precio"/>
                  <field name="precio"/>
                  <field name="precio_diesel"/>
                  <field name="rendimiento_diesel"/>
                  <field name="diesel"/>
                  <field name="caseta_efectivo"/>
                  <field name="caseta_llave"/>
                  <field name="gastos_operador"/>
                </group>
                <group string="Gastos Totales">
                  <field name="gasto_total_operador"/>
                  <field name="gasto_total"/>
                </group>
                <group >
                </group>
                <group string="Origen">
                  <field name="recoge_en_origen"/>
                  <field name="direccion_origen"/>
                  <field name="pais_origen"/>
                  <field name="estado_origen" domain="[('country_id', '=', pais_origen)]"/>
                  <field name="ciudad_origen" />
                  <!--dato de la ciudad-->
                  <!--domain="[('country.state_id', '=', estado_origen)]"-->
                </group>
                <group string="Destino">
                  <field name="entrega_destino"/>
                  <field name="direccion_destino"/>
                  <field name="pais_destino"/>
                  <field name="estado_destino" domain="[('country_id', '=', pais_origen)]"/>
                  <field name="ciudad_destino" />
                  <!--domain="[('country.state_id', '=', estado_destino)]"-->
                </group>
              </group>
            </group>
          </page>
                  
        </field>
    </record>
</odoo>